    function AbrirFecharPlanilha(elemento) {
        $('.' + elemento).toggle();
        if ($('#' + elemento).hasClass('icn_mais')) {
            $('#' + elemento).addClass('icn_menos');
            $('#' + elemento).removeClass('icn_mais');
        } else {
            $('#' + elemento).addClass('icn_mais');
            $('#' + elemento).removeClass('icn_menos');
        }
    }
    
